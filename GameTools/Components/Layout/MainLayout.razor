@inherits LayoutComponentBase

<RadzenComponents @rendermode="InteractiveServer" />
<RadzenLayout>
    <RadzenHeader Orientation="LayoutOrientation.Horizontal" AlignItems="AlignItems.Center" Style="@(_branch == "develop" ? "background-color: #23b220;" : "")">
        <div class="header-bar">
            @if (_branch == "develop")
            {
                <RadzenLabel Text="Game Tools (development)"/>
            }
            else
            {
                <RadzenLabel Text="Game Tools"/>
            }
        </div>
    </RadzenHeader>
    <RadzenSidebar>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" />
            <RadzenPanelMenuItem Text="Enshrouded" Icon="shield">
                <RadzenPanelMenuItem Text="Upgrade Gems" Path="/enshrouded/gems" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    @if (_version != null)
    {
        <RadzenFooter>
            version <a target="_blank" href="https://github.com/lassevkarlsen/GameTools/commit/@_version">@_version</a>.
        </RadzenFooter>
    }
</RadzenLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>