@inherits LayoutComponentBase

<RadzenComponents @rendermode="InteractiveServer" />
<RadzenLayout>
    @{
        var headerStyle = $"background-item: {(_branch == "develop" ? "#23b220;" : "")}; width: 100%; padding: 0.5rem 1rem;";
    }
    <RadzenHeader Orientation="LayoutOrientation.Horizontal" Style="@headerStyle">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" JustifyContent="JustifyContent.SpaceBetween">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="10px">
                <RadzenSidebarToggle Click="@(() => _sidebarExpanded = !_sidebarExpanded)"/>
                @if (_branch == "develop")
                {
                    <div><RadzenLabel Text="Game Tools (development)"/> :: <RadzenLabel Text="@_pageTitle"/></div>
                }
                else
                {
                    <div><RadzenLabel Text="Game Tools"/> :: <RadzenLabel Text="@_pageTitle"/></div>
                }
            </RadzenStack>
            @if (_userId != null)
            {
                <a href="@($"/{_userId}/config/")">
                    <RadzenIcon Icon="settings"/>
                </a>
            }
            @* <RadzenButton Icon="settings" ButtonStyle="ButtonStyle.Light" Click="@(() => NavigationManager?.NavigateTo("/config"))"/> *@
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@_sidebarExpanded">
        <RadzenPanelMenu>
            @if (_userId != null)
            {
                <RadzenPanelMenuItem Text="Home" Icon="home" Path="@($"/{_userId}/")"/>
            }
            else
            {
                <RadzenPanelMenuItem Text="Home" Icon="home" Path="/"/>
            }
            @if (_userId != null)
            {
                <RadzenPanelMenuItem Text="Enshrouded" Icon="shield">
                    <RadzenPanelMenuItem Text="Upgrade Gems" Path="@($"/{_userId}/enshrouded/gems")"/>
                </RadzenPanelMenuItem>
            }
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            <CascadingValue Value="(Action<string>)SetPageTitle">
                <CascadingValue Value="(Action<Guid>)SetUserId">
                    @Body
                </CascadingValue>
            </CascadingValue>
        </div>
    </RadzenBody>
    <RadzenFooter class="footer" Style="background-color: #dddddd;">
        @if (_version != null)
        {
            <a target="_blank" href="https://github.com/lassevkarlsen/GameTools/commit/@_version">@_branch/@_version[0..8]</a>
        }
    </RadzenFooter>
</RadzenLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>