@inherits LayoutComponentBase

<RadzenComponents @rendermode="InteractiveServer" />
<RadzenLayout>
    <RadzenHeader Orientation="LayoutOrientation.Horizontal" AlignItems="AlignItems.Center" Style="@(_branch == "develop" ? "background-color: #23b220;" : "")">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => _sidebarExpanded = !_sidebarExpanded)"/>
            @if (_branch == "develop")
            {
                <div><RadzenLabel Text="Game Tools (development)"/> :: <RadzenLabel Text="@_pageTitle"/></div>
            }
            else
            {
                <div><RadzenLabel Text="Game Tools"/> :: <RadzenLabel Text="@_pageTitle"/></div>
            }
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@_sidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="Enshrouded" Icon="shield">
                <RadzenPanelMenuItem Text="Upgrade Gems" Path="/enshrouded/gems"/>
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            <CascadingValue Value="(Action<string>)SetPageTitle">
                @Body
            </CascadingValue>
        </div>
    </RadzenBody>
    <RadzenFooter Style="background-color: #dddddd; color: black;">
        @if (_version != null)
        {
            <div>version <a target="_blank" href="https://github.com/lassevkarlsen/GameTools/commit/@_version">@_version</a>.</div>
        }
    </RadzenFooter>
</RadzenLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>